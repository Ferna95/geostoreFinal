{# Main #}
{% block main %}
  <div role="main" class="main-container js-quickedit-main-content">
    <div class="row">
      <section class='col-sm-12'>
        {% block content %}
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="busquedas-por-hora card-2">
                <div class="header-card col-md-12 bg-strong">
                  <h4 class="text-center color-lighter  py-2 m-0">Productos más búscados</h4>
                </div>
                <div class="body-card p-2">
                  <div class="form-group row">
                    <label for="cantidadProductos" class="col-sm-10 text-right">Cantidad a mostrar</label>
                    <div class="col-sm-2">
                      <select id="cantidadProductos" class="form-control form-control-sm">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="periodo" class="col-sm-9 text-right">Período</label>
                    <div class="col-sm-3">
                      <select id="periodo" class="form-control form-control-sm">
                        <option value="25200">Semanal</option>
                        <option value="756000">Mensual</option>
                        <option value="9198000">Anual</option>
                        <option value="10000000">Completo</option>
                      </select>
                    </div>
                  </div>
                  <canvas id="horizontalBar" style="max-width: 100%;"></canvas>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="busquedas-por-hora card-2">
                <div class="header-card bg-strong">
                  <h4 class="text-center color-lighter py-2 m-0">Búsquedas por hora</h4>
                </div>
                <div class="body-card p-2">
                  <div class="form-group row">
                    <label for="periodoHora" class="col-sm-9 text-right">Período</label>
                    <div class="col-sm-3">
                      <select id="periodoHora" class="form-control form-control-sm">
                        <option value="25200">Semanal</option>
                        <option value="756000">Mensual</option>
                        <option value="9198000">Anual</option>
                        <option value="10000000">Completo</option>
                      </select>
                    </div>
                  </div>
                  <canvas id="myChart" style="max-width: 100%;"></canvas>
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-4">
           <div class="col-md-12">
            <div class="busquedas-en-la-zona card-2">
              <div class="header-card bg-strong">
                <h4 class="text-center color-lighter py-2 m-0">Búsquedas en la Zona</h4>
              </div>
              <div id="map" style="height: 500px;"></div>
              {% for busqueda in busquedas_cercanas %}
               
              {% endfor %}
            </div>
           </div>
          </div>
          <div class="row mb-4">
            <div class="col-md-12">
              <div class="busquedas-en-la-zona card-2">
                <div class="header-card bg-strong">
                  <h4 class="text-center color-lighter py-2 m-0">Visitas de perfil</h4>
                </div>
                <div class="body-card p-2">
                  <div class="form-group row">
                    <label for="periodoNegocio" class="col-sm-9 text-right">Período</label>
                    <div class="col-sm-3">
                      <select id="periodoNegocio" class="form-control form-control-sm">
                        <option value="25200">Semanal</option>
                        <option value="756000">Mensual</option>
                        <option value="9198000">Anual</option>
                        <option value="1000000000">Completo</option>
                      </select>
                    </div>
                  </div>
                  <canvas id="lineChart" style="max-width: 100%;"></canvas>
                </div>
              </div>
            </div>
          </div>
        {% endblock %}
      </section>
    </div>
  </div>


{% endblock %}
